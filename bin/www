#!/usr/bin/env node
const http = require("http");
const chalk = require("chalk");
const app = require("../server");
const logger = require("../configs/winston.config");

const server = http.createServer(app);
const port = process.env.PORT || "5000";

server.listen(port);

server.on("error", () => {
	console.log("Error on node.js ...!", error);
	if (error.syscall !== "listen") throw error;

	switch (error.code) {
		case "EACCES":
			console.error("Requires elevated privileges.");
			process.exit(1);

		case "EADDRINUSE":
			console.error(port + " is already in use.");
			process.exit(1);

		default:
			throw error;
	}
});

server.on("listening", () => {
	const { address, family, port } = server.address();
	logger.info("server is up and running...ğŸš€");
	logger.info("server address: " + chalk.magenta(address));
	logger.info("server port: " + chalk.magenta(port));
	logger.info("server family: " + chalk.magenta(family));
});
